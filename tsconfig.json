{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2019",
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": ["ES2019"],
    "outDir": "dist"
  },
  "include": ["src/**/*", "jest.setup.ts"],
  "exclude": ["node_modules/@types/node"]
}
